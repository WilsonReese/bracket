<div>
  <div>
    <h1>
      Entry #<%= @the_entry.id %> details
    </h1>

    <div>
      <div>
        <a href="/entries">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_entry/<%= @the_entry.id %>">
          Delete entry
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Bracket
      </dt>
      <dd>
        <%= @the_entry.bracket_id %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_entry.status %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @the_entry.title %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_entry.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_entry.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit entry
    </h2>

    <form action="/modify_entry/<%= @the_entry.id %>"  method="post" >
      <div>
        <label for="bracket_id_box">
          Bracket
        </label>

        <input type="text" id="bracket_id_box" name="query_bracket_id" value="<%= @the_entry.bracket_id %>">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_entry.status %>">
      </div>

      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_entry.title %>">
      </div>

      <button>
        Update entry
      </button>
    </form>
  </div>
</div>

<hr>
